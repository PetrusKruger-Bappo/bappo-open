// @flow

import * as React from 'react';

export interface InputField {
  blur(): void;
  focus(): void;
}

export type InputFieldProps = {
  error?: string,
  label?: string,
  onBlur?: () => void,
  onFocus?: () => void,
  onValueChange?: (value: any) => void,
  value?: any,
};

export type InputFieldComponent = React.Component<InputFieldProps, any> &
  InputField;
